<ul class="meta-list">
  <% microtasks.each do |microtask| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(microtask.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to microtask.user.name, user_path(microtask.user) %> <span class="text-muted">posted at <%= microtask.created_at %></span>
        </div>
        <div>
          <p><%= microtask.content %></p>
        </div>
        <div>
          <% if current_user == microtask.user %>
            <%= link_to "Delete", microtask, method: :delete, data: {confirm: "You sure?"}, class: 'btn btn-danger btn-xs'%>
          <%end%>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate microtasks %>
</ul>